generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Portfolio {
  id          Int      @id @default(1)
  name        String
  photoUrl    String
  title       String
  aboutMe     String   @db.Text
  summary     String   @db.Text
  email       String?
  phone       String?
  linkedinUrl String?
  githubUrl   String?

  skills      Skill[]
  projects    Project[]
  experiences Experience[]
  educations  Education[]
}

model Skill {
  id          Int       @id @default(autoincrement())
  name        String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  portfolioId Int
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String    @db.Text
  imageUrl    String
  link        String
  tags        String[]
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  portfolioId Int
}

model Experience {
  id               Int       @id @default(autoincrement())
  role             String
  company          String
  period           String
  responsibilities String[]
  portfolio        Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  portfolioId      Int
}

model Education {
  id          Int       @id @default(autoincrement())
  institution String
  degree      String
  period      String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  portfolioId Int
}
